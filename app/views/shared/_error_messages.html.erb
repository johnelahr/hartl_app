<% if @user.errors.any? %>
	<div id="error_explanation">
		<div class="alert alert-error">
			The form contains <%= pluralize(@user.errors.count, "error") %>.<br />
			Please correct and resubmit.
		</div>
		<ul>		
			<% @user.errors.full_messages.each do |error| %>
				<li>* <%= error %></li>
			<% end %>
		</ul>
	</div>
<% end %>
